<%= form_for @user, html: {class: "login-box"} do |f| %>
    <h1>Sign Up</h1>
    <div class="textbox">
      <i class="user icon"></i>
      <%= f.text_field :username, placeholder: "Username" %>
    </div>
    <div class="textbox">
      <i class="envelope icon"></i>
      <%= f.email_field :email, placeholder: "E-mail address" %>
    </div>
    <div class="textbox">
      <i class="lock icon"></i>
      <%= f.password_field :password, class: "password", placeholder: "Password" %>
      <span class='eye-area'>
        <i id='eyeSlash' class="eye slash icon"></i>
        <i id='eye' class="eye icon"></i>
      </span>
    </div>
  
    <%= f.submit "Sign up", class: "btn" %>
<% end %>