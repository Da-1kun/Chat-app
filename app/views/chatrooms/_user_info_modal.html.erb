<div class="ui small modal" id="userInfoModal">
  <div class="header">
    <div class="content">Your Profile</div>
    <div class="ui icon top left pointing dropdown" id="profileMenu">
      <i class="ellipsis vertical alternate icon"></i>
      <div class="menu">
        <div class="item" id="editProfile"><i class="edit right floated icon"></i>
        Edit Profile</div>
        <div class="item" id="deleteAccount"><i class="trash right floated icon"></i>
        Delete Account</div>
      </div>
    </div>
    <div class="ui red right labeled icon button hidden-item" id="cancelBtn">
      Cancel
      <i class="window close icon"></i>
    </div>
  </div>
  <%= form_for user, html: { class: "ui profile image content form "}, remote: true do |f| %>
    <div class="content-area">
      <div class="ui image">
        <% if user.photo? %>
          <%= image_tag user.photo.url, class: "ui circular profile image", id: "photoArea" %>
        <% else %>
          <%= image_tag 'default-profile-photo.png', class: "ui circular profile image", id: "photoArea" %>
        <% end %>
        <label class="change-photo-link hidden-item">Change Profile Photo
          <%= f.file_field :photo, accept: 'image/jpeg,image/gif,image/png', id: "photoLink" %>
        </label>
      </div>
      <div class="description">
        <div class="field">
          <label>Name</label>
          <%= f.text_field :username, placeholder: "Name", disabled: true %>
        </div>
        <div class="field">
          <label>Email</label>
          <%= f.email_field :email, placeholder: "E-mail address", disabled: true %>
        </div>
        <div class="field hidden-item">
          <label>Passwod</label>
          <div class="ui icon input">
            <%= f.password_field :password, class: "password", disabled: true %>
              <i id='eyeSlash' class="eye slash link icon"></i>
              <i id='eye' class="eye link icon"></i>
          </div>
        </div>
        <%= f.submit "Update", class: "ui button hidden-item", id: "updateBtn" %>
      </div>
    </div>
  <% end %>
  <div class="actions">
    <div class="ui black deny button">
      Close
    </div>
  </div>
</div>