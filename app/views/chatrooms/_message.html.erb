<% @chatrooms.each do |chatroom| %>
  <div class="ui tab" data-tab="chatroom_<%= chatroom.id %>">
    <% new_messages(chatroom.id).each do |message| %>
      <% if message.user_id == current_user.id %>
        <div class="message-row you-message">
          <div class="message-content">
            <%= render 'message_content', message: message %>
            <div class="message-time">
              <%= message.created_at.strftime('%b %d　%R') %>
            </div>
          </div>
        </div>
      <% else %>
        <div class="message-row other-message">
          <div class="message-content">
            <% if message.user.photo? %>
              <%= image_tag message.user.photo.url, size: '45x45', class: "other-photo"%>
            <% else %>
              <%= image_tag 'default-profile-photo.png', class: "other-photo"%>
            <% end %>
            <%= render 'message_content', message: message %>
            <div class="message-time">
              <%= message.created_at.strftime('%b %d　%R') %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
